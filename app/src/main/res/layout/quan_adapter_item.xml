<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_height="@dimen/dp_280"
        app:cardCornerRadius="@dimen/dp_8"
        app:cardElevation="@dimen/dp_10"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_280"

            >

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/cicrcle_drawview_head_portrait"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_5"
                fresco:placeholderImage="@mipmap/ic_launcher"
                />

            <TextView
                android:id="@+id/cicrcle_text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_25"
                android:text="我该噶我给你"
                android:layout_marginLeft="@dimen/dp_76"
                />

            <TextView
                android:id="@+id/cicrcle_text_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_alignParentRight="true"
                android:text="给我干完"

                />

            <TextView
                android:id="@+id/cicrcle_text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="阿嘎瓦格纳平衡杆屁娃娃红尬舞为给"
                />
            <LinearLayout
                android:id="@+id/liner"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_alignTop="@id/cicrcle_text_title"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_140">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/cicrcle_drawview_comment1"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    fresco:placeholderImage="@mipmap/ic_launcher"
                    />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#ffffff"/>
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/cicrcle_drawview_comment2"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    fresco:placeholderImage="@mipmap/ic_launcher"
                    />
            </LinearLayout>
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/cicrcle_drawview_dianzan"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                fresco:placeholderImage="@mipmap/quan_btn_prise_n_hdpi"
                android:layout_alignTop="@id/liner"
                android:layout_marginTop="@dimen/dp_140"
                android:layout_alignRight="@id/cicrcle_text_dianzannum"
                android:layout_marginRight="@dimen/dp_34"
                />
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/cicrcle_drawview_dianzans"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                fresco:placeholderImage="@mipmap/quan_bian_btn_prise_s_hdpi"
                android:visibility="gone"
                android:layout_alignTop="@id/liner"
                android:layout_marginTop="@dimen/dp_140"
                android:layout_alignRight="@id/cicrcle_text_dianzannum"
                android:layout_marginRight="@dimen/dp_34"
                />
            <TextView
                android:id="@+id/cicrcle_text_dianzannum"
                android:layout_alignTop="@id/liner"
                android:text="666"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_140"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
